<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyGithub2" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black_80</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/orange</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="item_user_bg">
        <item name="android:background">@color/black_80_60t</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="gm_background">
        <item name="android:background">@drawable/bgdark</item>
    </style>

    <style name="font_theme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="font_theme.small">
        <item name="android:textColor">#F6F6F6</item>
    </style>

    <style name="banner_color_theme">
        <item name="cardBackgroundColor">@color/orange</item>
    </style>

    <style name="banner_ornaments_theme">
        <item name="android:src">@drawable/banner_ornaments_darktheme</item>
    </style>

    <style name="information_pad_theme">
        <item name="cardBackgroundColor">#292929</item>
    </style>

    <style name="tab_detail_theme">
        <item name="android:background">@drawable/tabs_bg_dark</item>
    </style>

    <style name="splash_title">
        <item name="android:src">@drawable/my_github_title</item>
    </style>

    <style name="splash_developer">
        <item name="android:src">@drawable/by_hizkya</item>
    </style>

    <style name="splash_bg">
        <item name="android:background">@color/black_80</item>
    </style>

    <style name="fab_add_favorite_color">
        <item name="android:backgroundTint">@color/orange</item>
    </style>
</resources>